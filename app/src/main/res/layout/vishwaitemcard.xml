<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000000">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



        <ImageView android:id="@+id/iv"
            android:layout_gravity="center_vertical"
            android:layout_width="120dp"
            android:layout_height="150dp"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"

                android:text="India Gate Basmati Rice"
                android:textColor="#FDFDFC"></TextView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">







            <TextView
                android:id="@+id/type"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="15dp"
                android:text="500 g"
                android:textColor="#F2F3EB"></TextView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="15dp"
                android:text="Price :₹"
                android:textColor="#E2EA03"></TextView>

                <TextView
                    android:id="@+id/mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="15dp"
                    android:text="135"
                    android:textColor="#D5EA03"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="15dp"
                    android:text="PickEatUp Price: ₹"
                    android:textColor="#D5EA03"></TextView>

                <TextView
                    android:id="@+id/peuprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="20dp"
                    android:text="135"
                    android:textColor="#FDFDFA"></TextView>



            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="15dp"
                    android:text="You Save:₹"
                    android:textColor="#D5EA03"></TextView>

                <TextView
                    android:id="@+id/saving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="15dp"
                    android:text="135"
                    android:textColor="#D5EA03"></TextView>


                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:layout_marginLeft="8dp"

                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:outlineSpotShadowColor="#0C0B0B"
                    app:backGroundColor="#ECE9E3"
                    app:textColor="#000000"

                    android:id="@+id/nb"
                    app:initialNumber="0"
                    app:finalNumber="10"></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>






            </LinearLayout>









        </LinearLayout>

    </LinearLayout>




</LinearLayout>