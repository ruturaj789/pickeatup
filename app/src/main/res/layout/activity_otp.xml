<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Otp"

    android:orientation="vertical"
    android:background="@drawable/otpbackg">

    <ImageView
        android:layout_width="250dp"
        android:src="@drawable/pickeatupiclogin"
        android:layout_height="250dp"
        android:layout_gravity="center"></ImageView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:padding="15dp">

        <Spinner

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"></Spinner>

        <EditText
            android:background="#FDF7F7"
            android:textSize="22dp"

            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Enter Your Mobile Number"
            android:maxLength="12"
            android:textColorHint="#100F0F"
            android:textColorHighlight="#BAAB23"

            android:textColor="#130E0E"></EditText>

    </LinearLayout>




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/conti"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"></Button>






</LinearLayout>