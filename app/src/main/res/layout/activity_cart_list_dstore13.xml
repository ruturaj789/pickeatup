<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fastfoodstores.CartListDstore13"
    android:background="#000000">

    <RelativeLayout
        android:id="@+id/rld13"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000"
        android:layout_alignParentTop="true">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <TextView

                android:id="@+id/totalsavingsdstore13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Save  "
                android:textStyle="italic"
                android:textColor="#C8F403"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal" />




            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/totalpricesdstore13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total  Price  "
                android:textStyle="bold"
                android:textColor="#FAF4F4"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal" />




        </LinearLayout>
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvcartdstore13"
        android:layout_below="@+id/rld13"
        android:layout_above="@+id/codstore13"

        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/codstore13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:text="Confirm Order"
        android:layout_margin="10dp"></Button>





</RelativeLayout>
